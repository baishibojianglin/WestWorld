
.content {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
		color: $uni-color-error;
}
.logo{
		height: 200rpx;
		width: 200rpx;
		margin: 100rpx auto 50rpx auto;
}
.text-area {
		position: relative;
		width: 80%;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
	    border-bottom: 1px solid #8F8F94;
	    margin-top: 50rpx;
		line-height: 50rpx;
}
.text-area input{
		width: 100%;
		margin-bottom: 20rpx;
		font-size: 28rpx;
		text-align: center;
}
.text-area text{
		position: absolute;
		left: 15rpx;
		bottom: 15rpx;
		font-size: 28rpx;
		text-align: center;
}
.getnotecode{
		position: absolute;
		right: 15rpx;
		bottom: 15rpx;
		font-weight: bold;
		color: gray;
}
.buttonwidth{
		width: 80%;
		margin-top: 50rpx;
		font-size: 28rpx;
		text-align: center;
		background-color: #2B9939;
}
.loginbottom{
		margin-top: 30rpx;
}
.loginbottom navigator{
		font-size: 24rpx;
		color: gray;
}

